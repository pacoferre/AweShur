@{
    ViewData["Title"] = "Home Page";


    AppUserNoDB.LoginWindows(this.Context);
}

@if (AppUser.UserIsAuthenticated(this.Context))
{
    <aswd-main></aswd-main>
}
else
{
    <aswd-login last-login="@AweShur.Web.Helpers.CookiesHelper.ReadCookie(Context, AweShur.Web.Helpers.CookiesHelper.LoginCookieName)"></aswd-login>
}

@section subelements
{
@if (AppUser.UserIsAuthenticated(this.Context))
{
    @Html.Raw("<link rel='import' href='/Elements/LoadLayout/Main/" + AppUser.IDAppUser(this.Context) + "'>")
}
else
{
    <link rel="import" href="~/elements/aswd-login.html">
}
}
