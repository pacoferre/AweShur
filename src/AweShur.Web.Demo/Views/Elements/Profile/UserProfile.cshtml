@{
    Layout = "";

    int? idappuser = AppUser.IDAppUser(Context);
}
<link rel="import" href="/lib/polymer/polymer.html">
<link rel="import" href="/elements/lib/awsl-editor/awsl-editorlimited.html">

<dom-module id="aswd-profile">
    <template>
        <style>
        </style>

        <awsl-editorlimited id="editor" oname="AppUser" key="@idappuser" on-elementready="_elementready"
                     edithref='@("/Elements/Load/Profile/UserProfileEdit/" + idappuser)' editelement="aswd-userprofileedit">
        </awsl-editorlimited>
    </template>
    <script>
        Polymer({
            is: 'aswd-profile',
            properties: {
            },
            _elementready: function () {
                this.$.editor.load(@idappuser);
            },
            refresh: function () {
                this.$.editor.refresh();
            },
        });
    </script>
</dom-module>
