@model BusinessBaseDefinition
@{
    Layout = "_CRUDLayout";
}

<dom-module id="aswd-simpleedit">
    <template>
        @foreach (PropertyDefinition prop in Model.ListProperties)
        {
            if (!prop.IsIdentity)
            {
                @Html.PolEditor(Model, prop.FieldName)
            }
        }
    </template>
    <script>
    Polymer({
        is: 'aswd-simpleedit',
        behaviors: [AWSLBehaviors.ElementBehavior],
    });
    </script>
</dom-module>
