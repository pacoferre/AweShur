@model BusinessBaseDecorator
@{
    Layout = "_CRUDLayout";

    string componentName = AweShur.Web.CRUDLocations.ComponentsPrefix + "-" + Model.ObjectName.ToLower() + "filter";
}

<dom-module id="@(componentName)">
    <template>
        @foreach (PropertyDefinition prop in Model.ListProperties)
        {
            if (!prop.IsIdentity)
            {
                @Html.PolSearch(Model, prop.FieldName)
            }
        }
    </template>
    <script>
    Polymer({
        is: '@(componentName)',
        behaviors: AWSLBehaviors.FilterElementBehavior,
    });
    </script>
</dom-module>
