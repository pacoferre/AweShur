@{
    bool error = false;
    bool firstOrder = false;
    string msgError = "";
    AweShur.Web.CRUDLocationItem item = null;
    int? idappuser = AppUser.IDAppUser(Context);
    List<DataViewColumn> columns = null;

    try
    {
        string eref = this.Context.Request.Query["e"].NoNullString();

        if (eref == "")
        {
            throw new Exception("Query parameter 'e' missing");
        }
        else
        {
            item = AweShur.Web.CRUDLocations.Item(eref);
        }

        columns = BusinessBaseProvider.Instance.GetFilter(Context,
                item.ObjectName).GetEmpty().VisibleColumns;
    }
    catch (Exception exp)
    {
        error = true;
        msgError = exp.ToString();
    }

    Layout = "";


}
<link rel="import" href="~/lib/polymer/polymer.html">
<link rel="import" href="~/elements/lib/awsl-listeditor/awsl-listeditor-vaadin.html">

<dom-module id="@item.componentName">
    <template>
        <style include="shared-styles"></style>
        @if (error)
        {
            <div>@msgError</div>
        }
        else
        {
            <awsl-listeditor-vaadin oname="[[oname]]" route="{{route}}" path="[[name]]" title="" id="le"
                edithref='@(item.edithref + "/" + idappuser)' editelement="@item.editelement"
                filterhref='@(item.filterhref + "/" + idappuser)' filterelement="@item.filterelement"
                title-search="Filter">
                <table>
                    <colgroup>
                        @foreach (DataViewColumn v in columns)
                        {
                            @if (v.Hidden)
                            {
                                <col hidden="">
                            }
                            else
                            {
                                @if (!firstOrder)
                                {
                                    firstOrder = true;
                                    <col sortable="" sort-direction="asc">
                                }
                                else
                                {
                                    <col sortable="">
                                }
                            }
                        }
                    </colgroup>
                    <thead>
                        <tr>
                            @foreach (DataViewColumn v in columns)
                            {
                                <th>@v.Label</th>
                            }
                        </tr>
                    </thead>
                </table>
            </awsl-listeditor-vaadin>
        }
    </template>
    <script>
    Polymer({
        is: '@item.componentName',
        properties: {
            oname: {
                type: String
            },
            route: {
                type: Object,
                notify: true
            }
        },
        refresh: function()
        {
            this.$.le.refresh();
        }
    });
    </script>
</dom-module>
