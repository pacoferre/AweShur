@{
    Layout = "";
}
<link rel="import" href="/lib/paper-input/paper-input.html">
<link rel="import" href="/lib/paper-radio-button/paper-radio-button.html">
<link rel="import" href="/lib/paper-radio-group/paper-radio-group.html">
<link rel="import" href="/lib/paper-checkbox/paper-checkbox.html">
<link rel="import" href="/lib/gold-email-input/gold-email-input.html">

<link rel="import" href="/AWSLib/awsl-element-behavior">

<dom-module id="aswd-useredit">
    <template>
        <style>
            paper-checkbox {
                padding: 12px;
                display: block;
            }
        </style>
        <paper-checkbox checked="{{item.deactivated}}">Deactivated</paper-checkbox>
        <gold-email-input value="{{item.email}}" label="Email" always-float-label></gold-email-input>
        <paper-input value="{{item.password}}" label="Password" always-float-label type="password"></paper-input>
        <paper-input value="{{item.name}}" label="Name" always-float-label></paper-input>
        <paper-input value="{{item.surname}}" label="Surname" always-float-label></paper-input>
    </template>
    <script>
    Polymer({
        is: 'aswd-useredit',
        properties: {
            item: {
                type: Object,
                notify: true,
                value: function () { return {}; }
            }
        },
        behaviors: [AWSLBehaviors.ElementBehavior],
        setData: function (response) {
            for (var name in response.data)
            {
                this.set("item." + name, response.data[name]);
            }
        }
    });
    </script>
</dom-module>